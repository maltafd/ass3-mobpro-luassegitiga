<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">
    <fragment
        android:id="@+id/hitungFragment"
        android:name="org.d3if2134.luas_segitiga.ui.hitung.HitungFragment"
        android:label="Menghitung Luas Segitiga"
        tools:layout="@layout/fragment_hitung" >
        <action
            android:id="@+id/action_hitungFragment_to_historiFragment2"
            app:destination="@id/historiFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment2"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_objekSegitigaFragment"
            app:destination="@id/objekSegitigaFragment" />
    </fragment>
    <action
        android:id="@+id/action_hitungFragment_to_aboutFragment"
        app:destination="@id/aboutFragment" />
    <action
        android:id="@+id/action_hitungFragment_to_historiFragment"
        app:destination="@id/historiFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if2134.luas_segitiga.ui.AboutFragment"
        android:label="@string/tentang_aplikasi"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/objekSegitigaFragment"
        android:name="org.d3if2134.luas_segitiga.ui.objek_segitiga.ObjekSegitigaFragment"
        android:label="@string/objek_segitiga"
        tools:layout="@layout/fragment_objek_segitiga"/>
    <fragment
        android:id="@+id/historiFragment"
        android:name="org.d3if2134.luas_segitiga.ui.histori.HistoriFragment"
        android:label="@string/histori"
        tools:layout="@layout/fragment_histori" />
</navigation>